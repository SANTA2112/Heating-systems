.certificates
  padding-top 9.6rem
  padding-bottom 10rem
  background url('./../../images/pattern.png') center center/contain #f5f5d7
  &__heading-wrap
    display flex
    align-items center
    position relative
  &__name
    font-family "Roboto Condensed"
    font-size 2.4rem
    font-weight 300
    line-height 7.2rem
    text-transform uppercase
    margin-left 14.9rem
  &__man
    position absolute
    right 2.9rem
    bottom -4.7rem
    width 21.4rem
    height 31.4rem
    background url('./../../images/certificates/man.png') center center/cover

.dignitys
  display flex
  justify-content space-between
  margin-top 4.7rem
  flex-wrap wrap
  &__dignity
    padding 4.4rem 6.2rem 4.4rem 5.2rem
    background-color #fff
    &-desc
      color #000000
      font-size 1.6rem
      line-height 2.6rem
    &-img
      margin-bottom 2rem
      &_1
        background url('./../../images/certificates/icon-1.png') center center/cover
        width 3.5rem
        height 5.1rem
      &_2
        background url('./../../images/certificates/icon-2.png') center center/cover
        width 5.1rem
        height 5.1rem
      &_3
        background url('./../../images/certificates/icon-3.png') center center/cover
        width 4.7rem
        height 5.1rem
      &_4
        background url('./../../images/certificates/icon-4.png') center center/cover
        width 4.9rem
        height 5.1rem
  &__dignity:nth-child(3)
    padding 4.6rem 5.4rem 4.4rem 5.3rem
  &__dignity:nth-child(4)
    padding 3.2rem 6.0rem 3.1rem 6.2rem

.certificate-block
  display flex
  margin-top 3.9rem
  align-items center
  justify-content space-around
  &__elem
    width 17.3rem
    height 23.3rem
    margin-right 13.3rem
    cursor pointer
  &__elem:nth-child(2)
    margin-right 0

