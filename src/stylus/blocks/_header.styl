.header
  padding-top 2.7rem
  padding-bottom 10rem
  background url('./../../images/pattern.png') center center/cover #f5f5d7
  &__contacts
    display flex
    justify-content space-between
    align-items center
  &__left-side, &__right-side
    display flex
    align-items center
  &__logo
    color darcc
    font-size 1.6rem
    margin-right 7.5rem
    line-height 2.3rem
  &__inst-contactwrap
    display flex
    align-items center
  &__inst-contact
    color #000
    font-size 1.8rem
    text-decoration none
    &:after
      content ''
      width 100%
      height 0.2rem
      margin-top 0.1rem
      display block
      background-color transparent
    &:hover, &:active
      color ligc
      &:after
        background-color ligc
  &__inst-contactimg
    width 2.6rem
    height 2.6rem
    background url('./../../images/instagram-logo.png') center center/cover
    margin-right 1rem
    margin-top 0.4rem
  &__phone-contact
    color darcc
    font-size 2.4rem
    margin-right 3.3rem
    text-decoration none
    &:after
        content ''
        width 100%
        height 0.2rem
        margin-top 0.1rem
        display block
        background-color transparent
    &:hover, &:active
      &:after
        background-color #000
  &__advantages
    display flex
    justify-content space-between
    margin-top 5rem
    flex-wrap wrap
  &__advantage-icon
      width 2.3rem
      height 2.4rem
      border-radius 50%
      border 1px solid #ffb2b5
      position relative
      margin-right 1.9rem
      padding-bottom 0.1rem
      margin-bottom -0.5rem
      display inline-block
      &:before
        content ''
        position absolute
        width 1.6rem
        height 1.7rem
        top 1px
        right 2px
        background url('../../images/ok-icon.png') center center/cover
  &__advantage
    color #000000
    font-size 1.8rem
  &__main
    margin-top 5rem
    position relative
  &__img
    position absolute
    top 5.8rem
    right 0
  &__heading
    color: #000000;
    font-family "Roboto Condensed"
    font-weight 300
    font-size 6rem
    line-height 7.2rem
    text-transform uppercase
  &__heading-style
    font-weight 700
  &__description
    color #909090
    font-family "Roboto Condensed"
    font-size 1.8rem
    font-weight 400
    line-height 2.6rem
    text-transform uppercase
    margin-top 4rem
    margin-bottom 3.8rem
  &__stages
    display flex
    justify-content space-between
    margin-top 5rem
  &__stage
    height 10rem
    position relative
  &__stage-number
    position absolute
    top -2.8rem
    left 0
    width 135px
    height 100px
    opacity 0.07
    color #000000
    font-size 15rem
    font-weight 700
    user-select none
  &__stage-text
    font-size 1.8rem
  &__stage-grey_text
    color ligc

.bold-name
  font-weight 700
  text-transform uppercase

.grey-text
  color ligc
  margin-right 0.4rem
