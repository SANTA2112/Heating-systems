.thanks
  background url('./../../images/pattern.png') center center/cover #f5f5d7
  height 100vh
  padding-top 22.8rem
  &__wrapper
    display flex
    align-items center
.heading
  width 60%
  flex 0 0 auto


.maimlink-wrap
  border-radius: 2.8rem
  border 1px solid #ffb2b5
  padding 1rem
  display inline-block
  margin-top 5rem

.mainlink
  box-shadow 0 5px 10px rgba(227, 69, 74, 0.35)
  display block
  border none
  border-radius 2.8rem
  background-color #e31e25
  color #ffffff
  font-size 1.8rem
  font-weight 700
  padding 2.3rem 7.5rem
  text-decoration none

.header__img_fix
  position static
  transform: translateX(-20%)
