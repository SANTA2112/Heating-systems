.button-wrap
  border-radius: 2.8rem
  border 1px solid #ffb2b5
  padding 1rem
  display inline-block
  &_fix-pad
    padding 0.5rem
    padding-left: 0.6rem
  &_fix-pad1
    padding 0.9rem 0.6rem 1rem 0.7rem
  &_fix-grid-right
    transform translateX(0.5rem)
  &_fix-grid-left
    transform translateX(-0.5rem)
  &_fix-width1
    width: 27.9rem

.fix-height
  height 4.8rem
  width 20.1rem


.button
  box-shadow 0 5px 10px rgba(227, 69, 74, 0.35)
  border none
  border-radius 2.8rem
  background-color #e31e25
  color #ffffff
  font-size 1.8rem
  font-weight 700
  padding 2.4rem 4.6rem 2.2rem
  &_fix-pad
    padding 1.9rem 3.9rem 1.7rem 4rem
  &_fix-pad2
    padding 2.4rem 3.7rem 2.2rem
  &_fix-pad3
    padding 2.4rem 4.2rem 2.2rem 3.7rem
  &_fix-pad4
    padding 2.4rem 4.5rem 2.6rem 4.4rem
  &_fix-width
    width 100%
  &_fix-fns
    font-size 1.6rem
  &_fix-fns1
    font-size 1.5rem
  &_fix-fns2
    font-size: 1.4rem
  &:hover, &:active
    background-color #ff222a
  &_clear-padding
    padding 0



