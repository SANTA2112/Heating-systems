.group
  position relative
  margin-right 2.8rem
  &__input
    font-size 18px
    padding 10px 10px 10px 5px
    display block
    width 274px
    border none
    border-bottom 1px solid ligc
    &:focus
      outline none
      & ~ .highlight
        animation inputHighlighter 0.3s ease
  &__label
    color ligc
    font-size 18px
    font-weight normal
    position absolute
    pointer-events none
    left 5px
    top 10px
    transition 0.2s ease all
  &__input:focus ~ &__label
    top -20px
    font-size 14px
  &__span
    position absolute
    height 60%
    width 100px
    top 25%
    left 0
    pointer-events none
    opacity 0.5
  &__span2
    position relative
    display block
    width 274px
    &:before
      left 50%
    &:after
      right 50%

.group__span2:before, .group__span2:after
  content ''
  height 1px
  width 0
  bottom 1px
  position absolute
  background-color #239cc8
  transition 0.2s ease all

.group__input:focus ~ .group__span2:before, .group__input:focus ~ .group__span2:after
  width 50%


@keyframes inputHighlighter
  from
    background #5264AE
  to
    width 0
    background transparent
