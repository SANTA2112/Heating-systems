.form-modal
  display none
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  margin auto
  background-color rgba(0,0,0,.5)
  opacity 0
  transition opacity .4s
  will-change opacity
  z-index: 1

.form-modal.show
  opacity 1

.form-works
  display flex
  flex-direction column
  max-width 40rem
  padding 4rem
  border 5px solid blue
  padding 2.4rem
  border-radius .5rem
  position: relative
  background-color #fff
  &__select
    margin-bottom 1rem

.form__header
  font-size 1.8rem
  margin-bottom 1rem
  text-align center

.form__input
  margin-bottom 1rem
  padding 1rem
